@model IEnumerable<Activity>
@{  ViewData["Title"] = "Activities list"; }

<div class="row">
    <div class="cold-md-12">
        <h2>@ViewData["Title"]</h2>
    </div>
</div>
<div class="row">
    <div class="cold-md-12">
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.StartDateTimeUtc)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.EndDateTimeUtc)
                </th>
                <th></th>
            </tr>
            @foreach (var item in Model) {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @item.StartDateTimeUtc.ToShortDateString()
                    </td>
                    <td>
                        @item.EndDateTimeUtc.ToShortDateString()
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", "Activity", new { id = item.Id }, new { @class = "btn" })
                        @Html.ActionLink("Details", "Details", "Activity", new { id = item.Id }, new { @class = "btn" }) 
                        @Html.ActionLink("Delete", "Delete", "Activity", new { id = item.Id }, new { @class = "btn" })
                        @Html.ActionLink("Assign Volunteers", "Assign", new { id = item.Id }, new { @class = "btn" })
                    </td>
                </tr>
            }
        </table>
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        @Html.ActionLink("Create New", "Create", "Activity", null, new { @class = "btn" })
    </div>
</div>

